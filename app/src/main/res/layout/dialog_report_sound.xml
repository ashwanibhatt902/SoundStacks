<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.startup.soundstack.customclass.CustomText
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report sound"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@color/color_primary"
        app:customFont="ProximaNovaSoftMedium.ttf"
        android:textColor="@android:color/white"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

    <com.startup.soundstack.customclass.CustomText
        android:id="@+id/label_cate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason"
        android:textSize="20sp"
        android:textColor="@color/color_primary_dark"
        app:customFont="ProximaNovaSoftMedium.ttf"


        />

    <com.startup.soundstack.customclass.CustomSpinner
        android:id="@+id/reason_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:entries="@array/report_reason"

        />

    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInput_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/category_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Detail Reason (Optional)"
            android:textColorHint="@color/color_primary_dark"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLength="300"
             />

    </android.support.design.widget.TextInputLayout>

   </LinearLayout>